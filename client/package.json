{
  "name": "eamon-remastered",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "license": "ISC",
  "version": "2.1.0",
  "dependencies": {
    "axios": "^0.19.2",
    "ie-array-find-polyfill": "^1.1.0",
    "js-cookie": "^2.2.0",
    "lz-string": "^1.4.4",
    "pluralize": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-facebook-login": "^4.1.1",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.0.0",
    "react-transition-group": "^4.0.1",
    "reactstrap": "^8.4.1",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "start": "concurrently \"npm run webpack:watch\" \"npm run build-css:watch\"",
    "build": "npm run webpack && npm run build-css",
    "build-css": "node-sass scss -o build/static/css",
    "build-css:watch": "node-sass -w scss -o build/static/css",
    "test": "jest",
    "webpack": "webpack --mode production",
    "webpack:dev": "webpack --mode development",
    "webpack:watch": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.3",
    "babel-jest": "^25.3.0",
    "babel-loader": "^8.01.0",
    "concurrently": "^5.1.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.3.0",
    "node-sass": "^4.13.1",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.2.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/adventures/base-adventure/"
    ],
    "testURL": "http://localhost:8000/"
  }
}
