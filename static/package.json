{
  "name": "eamon",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdechant/eamon.git"
  },
  "scripts": {
    "start": "concurrently \"npm run build-css:w\" \"npm run browser-sync\" ",
    "start-all": "tsc && concurrently \"npm run tsc:w\" \"npm run build-css:w\" \"npm run browser-sync\" ",
    "browser-sync": "browser-sync start --files \"static/css/*.css\" --proxy 127.0.0.1:8000 --serveStatic: static",
    "lite": "lite-server",
    "test": "live-server --open=unit-tests.html",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "build-css": "node-sass scss -o css",
    "build-css:w": "node-sass -w scss -o css",
    "lint": "tslint app/**/*.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "~2.3.0",
    "@angular/compiler": "~2.3.0",
    "@angular/core": "~2.3.0",
    "@angular/forms": "~2.3.0",
    "@angular/http": "~2.3.0",
    "@angular/platform-browser": "~2.3.0",
    "@angular/platform-browser-dynamic": "~2.3.0",
    "@angular/router": "~3.3.0",

    "systemjs": "0.19.40",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.0-rc.4",
    "zone.js": "^0.7.2",

    "angular2-uuid": "^1.1.0",
    "bootstrap": "^3.3.7"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "lite-server": "^2.2.2",
    "typescript": "~2.0.10",

    "canonical-path": "0.0.2",
    "http-server": "^0.9.0",
    "tslint": "^3.15.1",
    "lodash": "^4.16.4",
    "jasmine-core": "~2.4.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "4.0.9",
    "webdriver-manager": "10.2.5",
    "rimraf": "^2.5.4",

    "@types/node": "^6.0.46",
    "@types/jasmine": "^2.5.36",
    "@types/selenium-webdriver": "^2.53.33"
  }
}
