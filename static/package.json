{
  "name": "eamon",
  "description": "A rewrite of the classic text adventure game, The Wonderful World of Eamon.",
  "version": "0.1.0",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/kdechant/eamon.git"
  },
  "scripts": {
    "start": "concurrently \"npm run build-css:w\" \"npm run browser-sync\" ",
    "start-all": "tsc && concurrently \"npm run tsc:w\" \"npm run build-css:w\" \"npm run browser-sync\" ",
    "browser-sync": "browser-sync start --files \"static/css/*.css\" --proxy 127.0.0.1:8000 --serveStatic: static",
    "lite": "lite-server",
    "test": "live-server --open=unit-tests.html",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "build-css": "node-sass scss -o css",
    "build-css:w": "node-sass -w scss -o css",
    "lint": "tslint app/**/*.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^2.0.0-rc.2",
    "@angular/compiler": "^2.0.0-rc.2",
    "@angular/core": "^2.0.0-rc.2",
    "@angular/forms": "^0.2.0",
    "@angular/http": "^2.0.0-rc.2",
    "@angular/platform-browser": "^2.0.0-rc.2",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.2",
    "@angular/router": "^3.0.0-alpha.7",
    "@angular/upgrade": "^2.0.0-rc.2",
    "bootstrap": "^3.3.6",
    "concurrently": "^2.1.0",
    "es6-shim": "^0.35.1",
    "node-sass": "^3.8.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "^0.19.27",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "concurrently": "*",
    "jasmine-core": "*",
    "lite-server": "*",
    "node-sass": "*",
    "typescript": "*"
  }
}
